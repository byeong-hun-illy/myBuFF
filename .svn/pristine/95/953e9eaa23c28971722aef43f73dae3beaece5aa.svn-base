@charset "UTF-8";
/* 가맹점 조회 + 상세 + 추가 */
/* selectFrcs th */
.th-num{
	width: 5%;
}
.th-st{
	width: 5%;
}
.th-nm{
	width: 10%;
}
.th-dt{
	width: 10%;
}
.th-rgn{
	width: 30%;
}
.th-frcsNm{
	width: 40%;
}

.bar{
	border-top: 1px solid var(--blue--8);
}

.cont-person{
	width: 800px;
}
/* 설정 */
.row-spbt{
	justify-content: space-between;
}
.table-wrap{
	margin-bottom: var(--gap--m);
}
.cont-half{
	width: 50%;	
}
.cont-row{
	display: flex;
	justify-content: space-between;
}
.table-title{
	height: 44px;
	padding-left: var(--gap--m);
}

.table-wrap::-webkit-scrollbar{
  display:none;
}

/* input 안 검색 */
.input-wrapper {
    position: relative;
    display: inline-block;
}
.update-btn {
	border: none;
	background: var(--gray-0);
	background: url(/resources/images/common/search.png) no-repeat 50% 50%;
    background-size: 20px 20px;
    transform: translateX(-115%) translateY(25%);
	padding: 15px;
    position: absolute;
}
/* 주소 */
.addr-zip{
	width: 150px;
}

.addr{
	margin-bottom: 2px;
}

/* 전화번호 */
.input-tel{
	padding : 5px;
	width: 58px;
	text-align: center;
}

/* 가맹점 조회 상세 제목 나누기  */
.bar{
	border-bottom: 1px solid var(--border--accent);
}
/* 상세정보 조회에 경고창 아이콘 */
#mngr-warn .material-symbols-outlined {
	font-size : 120px;
	margin: var(--gap--s);
	font-variation-settings:
	  'FILL' 0,
	  'wght' 700,
	  'GRAD' 0,
	  'opsz' 48;
	  color: var(--text--placeholder);
}
/* 상세 정보 조회에 경고창 */
#mngr-warn{
	text-align: center;
	border-top: 1px solid var(--blue--8);
}
/* 상세 정보 조회에 경고창 내용 */
.warn-cont{
	color : var(--text--placeholder);
	font-size : 1.2rem;
}
/* 경고 문구 */
.warning{
	color: var(--red--5);
	margin-bottom: var(--gap--s);
}

/* 상세 조회 아이콘 */
.title-icon{
	vertical-align: middle;
	color : var(--text--primary);
	font-size : var(--page--title--size);
	margin-right: var(--gap--s);
}

/* insert에 넣는 title */
.th-title{
	height: 64.73px;
}
.th-title-cont{
	text-align: center;
    font-size: 1.2rem;
}
.table-footer{
	text-align-last: right;
    margin: var(--gap--s);
}
/* 필수 입력 항목 */
.es{
	color: var(--brand--accent);
}
.modal-body{
	background-color: var(--blue--05);
}

/* 가맹점 조회 + 상세 + 추가 끝*/

.accordion-btn{
	padding: none;
	border: none;
	background: none;
}
