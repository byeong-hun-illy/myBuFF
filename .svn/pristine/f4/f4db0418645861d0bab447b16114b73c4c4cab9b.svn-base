@charset "UTF-8";
/* 공통 */
.main-cont{
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background-color: #fff;
    border-radius: 10px;
    padding: var(--pd--m);
    display: flex;
    gap: var(--gap--m);
}
.frow{
	display: flex;
	flex-direction: row;
	gap:var(--gap--s);
}
.spbt{
	justify-content: space-between;
}
.spar{
	justify-content: space-around;
}
.fcol{
	display: flex;
	flex-direction: column;
	gap:var(--gap--s);
}


/* info */
.main-info-title{
	color:var(--blue--0);
    font-size: 1.3rem;
    font-weight: 900;
}
.main-info-cont{
	display: flex;
	flex-direction: column;
	gap:var(--gap--s);
    align-items: center;
}
.info-wrap{
	border-radius: 10px;
    padding: var(--pd--s);
    width: 85px;
    height: 85px;
    gap:var(--gap--s);
    display: flex;
    flex-direction: column;
    justify-content: center;
    cursor: pointer;
}
.info-wrap:hover{
    box-shadow: 0px 8px 20px rgba(100, 100, 110, 0.09);
}

.info-title{
    font-weight: 400;
    display: flex;
    gap:2px;
	font-size: 0.77rem;
	color: var(--green--8);
}
.info-title .material-symbols-outlined{
	color:var(--gray--1);
	font-size: 0.7rem;
}

.info-cont{
	color:var(--green--9);
	font-size: 1.5rem;
    font-weight: 800;
    display: flex;
    justify-content: end;
}

.main-info{
	background: linear-gradient(180deg, var(--green--3), var(--green--5));
	gap:var(--gap--l);
}


/* amt 시작*/  
.amt-wrap{
	display: flex;
	gap: var(--gap--m);
	flex-direction: row;
}
.amt-col{
	display:flex;
	flex-direction:column;
	gap: var(--gap--m);
}
.amt-cont{
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background-color: #fff;
    border-radius: 10px;
    overflow: hidden;
    padding: var(--pd--m);
    
    width: -webkit-fill-available;
    
    gap: var(--gap--s);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.amt-title{
	font-size: large;
    font-weight: 400;
    color: var(--gray--5);
}
.amt-cont-dtl{
	display: flex;
    flex-direction: column;
    gap: var(--gap--s);
}
.amt-dtl{
	display: flex;
	flex-direction: row;
	gap:var(--gap--s);
	align-items: end;
    justify-content: right;
}
.amt-amt{
	font-size: x-large;
	font-weight: 700;
}
.amt-icon{
	display: flex;
    align-items: center;
}
.icon-amt{
	font-size:50px;
	color:var(--gray--4);
}
/* amt 끝*/  


/* cnt 시작 */
.scm-wrap{
	display: flex;
	gap: var(--gap--m);
	flex-direction: row;
}
.scm-cont{
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background: linear-gradient(180deg, var(--yellow--2), var(--yellow--3));
    border-radius: 10px;
    overflow: hidden;
    padding: var(--pd--m);
    
    gap: var(--gap--s);
    display: flex;
    flex-direction: row;
    width: 170px;    /* 크기 */
    justify-content: space-between;
    cursor: pointer;
}
.scm-cont:hover{
	background: linear-gradient(180deg, var(--yellow--3), var(--yellow--4));
}
.scm-dtl{
	display: flex;
	flex-direction: column;
	gap:var(--gap--s);
}
.scm-num{
	font-size: 1.5rem;
    font-weight: 900;
}
.scm-icon{
    display: flex;
    justify-content: center;
    align-items: center;
}
.icon-cnt{ /*아이콘*/
	font-size: 46px;
	color: var(--blue--8);
}
.scm-title{
	font-size: 0.9rem;
	color: var(--gray--8);
}
/* scm 끝 */


/* cnt 시작 */
.cnt-wrap{
	display: flex;
	gap: var(--gap--m);
	flex-direction: row;
}
.cnt-cont{
	cursor: pointer;
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
    background-color: #fff;
    border-radius: 10px;
    overflow: hidden;
    padding: var(--pd--m);
    
    gap: var(--gap--s);
    display: flex;
    flex-direction: column;
    width: 130px;
}
.cnt-cont:hover{
    box-shadow: 0 0 10px var(--gray--2),
                0 0 10px var(--gray--2),
                0 0 10px var(--gray--2),
                0 0 10px var(--gray--2);
}
.cnt-num{
	font-size: 1.5rem;
    font-weight: 900;
}
.cnt-icon{
	background: var(--green--4);
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.icon-cnt{ /*아이콘*/
	font-size: 30px;
	color: white;
}
.cnt-title{
	font-size: 0.9rem;
	color: var(--gray--4);
}
/* cnt 끝 */


/* 탭으로 전환 */
.main-container {
    flex-grow: 1;
}
.main-wrapper {
	display: flex;
	height: 100%;
}
.indicator {
	border-right: 1px solid var(--grey);
	gap: var(--gap--s);
    display: flex;
    flex-direction: column;
    padding-top: var(--gap--m);
}
.indicator li {
	box-shadow: 0px 8px 20px rgba(127, 138, 140, 0.09);
	display: flex;
	padding: var(--pd--s);
	cursor: pointer;
	font-size: .875rem;
	color: var(--black);
	border-right: 3px solid transparent;
	border-radius: var(--radius--m) 0 0 var(--radius--m);
	width: 70px;
    justify-content: end;
    background: white;
}
.indicator li i {
	font-size: 1rem;
}
.indicator li:hover {
	background: var(--gray--3);
}
.indicator li.active {
	color: var(--blue--0);
	background: var(--blue--8);
}
.main-content {
	padding: 1.5rem 2rem;
	flex-grow: 1;
	max-height: 320px;
	overflow: auto;
}
.main-content li {
	display: none;
}
.main-content li.active {
	display: block;
}
.main-content li h1 {
	font-size: 1.5rem;
	font-weight: 600;
	color: var(--black);
	margin-bottom: .75rem;
}
.main-content li p {
	margin-bottom: .5rem;
	color: var(--dark-grey);
	font-size: .875rem;
}

/* 캘린더 */
.fc .fc-toolbar.fc-header-toolbar {
    margin-bottom: 0;
    padding: var(--pd--s);
}

.fc-toolbar-title{
	font-size : 1rem !important;	
}
/* today */
.fc .fc-button-primary{
	width: 50px !important;
    font-size: 0.7rem !important;
}
.fc .fc-daygrid-day-number, .fc .fc-col-header-cell-cushion {
	color: var(--blue--8);
}
.fc-button-primary{
	width: 30px !important;
    height: 30px !important;
    padding: 0 !important;   /* 기본 패딩 제거 */
    display: flex !important; /* 가운데 정렬을 위한 flex 설정 */
    align-items: center !important; /* 수직 가운데 정렬 */
    justify-content: center !important; /* 수평 가운데 정렬 */	
}
.fc-toolbar-chunk{
	display: flex !important;
}
.fc-icon{
	color: white !important;
    font-size: 16px !important;
    width: 100% !important;    
    height: auto !important;    
}
.fc-event {
    background-color: var(--green--3) !important;  /* 이벤트 배경 색상 */
    border-color: var(--green--3) !important;      /* 이벤트 테두리 색상 */
    color: var(--blue--8) !important;             /* 이벤트 글자 색상 */
}

/* 일요일 날짜 빨간색 */
.fc-day-sun a {
  color: var(--red--5) !important;
  text-decoration: none;
}

/* 토요일 날짜 파란색 */
.fc-day-sat a {
  color: var(--blue--5) !important;
  text-decoration: none;
}
#calendar {
    max-width: 100%;
    width: 600px; /* 기본 크기 600px */
    margin: 0 auto;
}

@media (max-width: 768px) {
    #calendar {
        width: 100%; /* 작은 화면에서는 전체 너비로 설정 */
    }
}