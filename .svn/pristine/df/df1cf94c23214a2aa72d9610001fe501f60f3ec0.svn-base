@charset "UTF-8";
/* 가맹점 조회 + 상세 + 추가 */
/* selectFrcs th */
.th-num{
	width: 5%;
}
.th-st{
	width: 5%;
}
.th-nm{
	width: 10%;
}
.th-dt{
	width: 10%;
}
.th-rgn{
	width: 30%;
}
.th-frcsNm{
	width: 40%;
}

.bar{
	border-top: 1px solid var(--blue--8);
}
.cont-group{
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.cont-person{
	width: 100%;
}
/* 설정 */
.row-spbt{
	justify-content: space-between;
}
.table-wrap{
	margin-bottom: var(--gap--m);
}
.cont-half{
	width: 100%;	
	margin-right: var(--gap--xl);
}
.cont-row{
	display: flex;
}
.table-title{
	height: 44px;
	padding-left: var(--gap--m);
}

.table-wrap::-webkit-scrollbar{
  display:none;
}

/* input 안 검색 */
.input-wrapper {
    position: relative;
    display: inline-block;
}
.update-btn {
	border: none;
	background: var(--gray-0);
	background: url(/resources/images/common/search.png) no-repeat 50% 50%;
    background-size: 20px 20px;
    transform: translateX(-115%) translateY(25%);
	padding: 15px;
    position: absolute;
}
/* 주소 */
.addr-zip{
	width: 150px;
}

.addr{
	margin-bottom: 2px;
}

/* 전화번호 */
.input-tel{
	padding : 5px;
	width: 58px;
	text-align: center;
}

/* 가맹점 조회 상세 제목 나누기  */
.bar{
	border-bottom: 1px solid var(--border--accent);
}
/* 상세정보 조회에 경고창 아이콘 */
#mngr-warn .material-symbols-outlined {
	font-size : 120px;
	margin: var(--gap--s);
	font-variation-settings:
	  'FILL' 0,
	  'wght' 700,
	  'GRAD' 0,
	  'opsz' 48;
	  color: var(--text--placeholder);
}
/* 상세 정보 조회에 경고창 */
#mngr-warn{
	text-align: center;
	border-top: 1px solid var(--blue--8);
}
/* 상세 정보 조회에 경고창 내용 */
.warn-cont{
	color : var(--text--placeholder);
	font-size : 1.2rem;
}
/* 경고 문구 */
.warning{
	color: var(--red--5);
	margin-bottom: var(--gap--s);
}

/* 상세 조회 아이콘 */
.title-icon{
	vertical-align: middle;
	color : var(--text--primary);
	font-size : var(--page--title--size);
	margin-right: var(--gap--s);
}

/* insert에 넣는 title */
.th-title{
	height: 64.73px;
}
.th-title-cont{
	text-align: center;
    font-size: 1.2rem;
}
.table-footer{
	text-align-last: right;
    margin: var(--gap--s);
}
/* 필수 입력 항목 */
.es{
	color: var(--brand--accent);
}
.modal-body{
	background-color: var(--blue--05);
}
.submit-btn{
	padding: 1px 40px;
    font-size: 1.3rem;
    font-weight: bold;
}
/* 가맹점 조회 + 상세 + 추가 끝*/


/* 점검 시작 */
/* 돋보기 버튼 효과 리셋 */
.add-btn{
	padding: none;
	border: none;
	background: none;
}
.center{
	text-align: center;
}

input[type='radio']{
	accent-color: var(--blue--6);
    width: 25px;
}
/* th 버튼 클릭 */
.all{
	cursor: pointer;
}

/* 편집기 높이 설정 */
.ck-editor__editable {
    min-height: 200px;
}

/* 폐업 관리자 없을 때 */
.warn-mngr{
	text-align: center;
    height: 131px;
}
.warn-mngr .material-symbols-outlined{
	font-size: 80px;
}
