@charset "UTF-8";

.wrap-inner {
	display: flex;
    justify-content: space-between;
    gap: 40px;
}

.store-list {
	width: 1000px;
	display: flex;
    flex-direction: column;
    gap: 30px;
}

.store-search {
    border: 1px solid var(--border--primary) !important;
    height: 44px !important;
    padding: 10px;
    border-radius: var(--radius--m);
}

.store-search input {
    width: 220px;
    border: none;
    padding: 0 !important;
    border-radius: 0;
}

.store-search input:focus {
	outline: none;
}

.store-search input:focus ~ .store-search {
	 border: 1px solid var(--brand--primary) !important;
}

/* 가맹점 목록 리스트 */
.card {
	padding: 20px;
	gap: 10px;
}

.store-cont {
	height: 663px;
    overflow-y: scroll;
    display: flex;
    flex-direction: column;
    border: 1px solid var(--gray--4);
}

.store-box {
    border-bottom: 1px solid var(--gray--4);
    padding: 20px 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    cursor: pointer;
}

.store-box:hover {
    background: var(--bg--blue);
}

.store-box:hover .store-nm {
	font-weight: bold;
}

.store-nm {
    display: flex;
    align-items: center;
    font-size: 1.2rem;
}

.star-btn {
    background: none;
    padding: 0;
}

.star-icon01 {
	font-size: 2rem;	
}

.star-icon02 {
	font-size: 2rem;
	font-variation-settings: 'FILL' 1, 'wght' 200, 'GRAD' 0, 'opsz' 24;
	color: var(--brand--primary);
}

.info-txt {
    font-size: 1.3rem;
    font-weight: bold;
    margin-bottom: 15px;
}

















