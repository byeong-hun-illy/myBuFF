@charset "UTF-8";
/* 가맹점 조회 + 상세 + 추가 */

.bar{
	border-top: 1px solid var(--blue--8);
}
.break {
    flex-basis: 10%;  /* 줄 바꿈 */
}
/* 설정 */
.table-wrap{
	margin-bottom: var(--gap--m);
}
.table-wrap::-webkit-scrollbar{
  display:none;
}

/* input 안 검색 */
.input-wrapper {
    position: relative;
    display: inline-block;
}
/* 가맹점주 관리자 가맹점 조회시 Input안으로 들어가는 돋보기 버튼 */
.update-btn {
	border: none;
	background: var(--gray-0);
	background: url(/resources/images/common/search.png) no-repeat 50% 50%;
    background-size: 20px 20px;
    transform: translateX(-115%) translateY(25%);
	padding: 15px;
    position: absolute;
}

/* 가맹점 조회 상세 제목 나누기  */
.bar{
	border-bottom: 1px solid var(--border--accent);
}
/* 상세정보 조회에 경고창 아이콘 */
#mngr-warn .material-symbols-outlined {
	font-size : 120px;
	margin: var(--gap--s);
	font-variation-settings:
	  'FILL' 0,
	  'wght' 700,
	  'GRAD' 0,
	  'opsz' 48;
	  color: var(--text--placeholder);
}
/* 상세 정보 조회에 경고창 */
#mngr-warn{
	text-align: center;
	border-top: 1px solid var(--blue--8);
}
/* 상세 정보 조회에 경고창 내용 */
.warn-cont{
	color : var(--text--placeholder);
	font-size : 1.2rem;
}
/* 경고 문구 */
.warning{
	color: var(--red--5);
	margin-bottom: var(--gap--s);
}

/* 상세 조회 아이콘 */
.title-icon{
	vertical-align: middle;
	color : var(--text--primary);
	font-size : var(--page--title--size);
	margin-right: var(--gap--s);
}

/* insert에 넣는 title */
.th-title{
	height: 64.73px;
}
.th-title-cont{
	text-align: center;
    font-size: 1.2rem;
}
.table-footer{
	text-align-last: right;
    margin: var(--gap--s);
}
/* 필수 입력 항목 */
.es{
	color: var(--brand--accent);
}
.modal-body{
	background-color: var(--blue--05);
}
.submit-btn{
	padding: 1px 40px;
    font-size: 1.3rem;
    font-weight: bold;
}
/* 가맹점 조회 + 상세 + 추가 끝*/


/* 점검 시작 */
/* 돋보기 버튼 효과 리셋 */
.add-btn{
	padding: none;
	border: none;
	background: none;
}
.center{
	text-align: center;
}

input[type='radio']{
	accent-color: var(--blue--6);
    width: 25px;
}
/* th 버튼 클릭 */
.all{
	cursor: pointer;
}

/* 편집기 높이 설정 */
.ck-editor__editable {
    min-height: 200px;
}


/* 점검 상세 모달 */
.modal-table {
    table-layout: fixed;  /* 테이블 열의 너비를 고정 */
    width: 100%;          /* 테이블의 전체 너비 */
}

.modal-table th,.modal-table td {
    width: 25%;           /* 모든 열의 너비를 동일하게 설정 */
}

/* 반투명 검은색 배경 */
.custom-backdrop {
    display: none; /* 기본적으로 숨김 */
    position: fixed;
    z-index: 1200; /* 배경의 z-index는 모달보다 낮게 설정 */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* 50% 불투명 */
}
