												<c:when test="${faqVO.qsType == 'QS01'}">구매</c:when>
												<c:when test="${faqVO.qsType == 'QS02'}">매장이용</c:when>
												<c:when test="${faqVO.qsType == 'QS03'}">채용</c:when>
												<c:when test="${faqVO.qsType == 'QS04'}">가맹점</c:when>
